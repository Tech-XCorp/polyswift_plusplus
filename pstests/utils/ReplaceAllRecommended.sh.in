# All rights reserved.
#
######################################################################

tests_to_replace=`grep "Recommend accepting" PsTestsFailed.log | sed -e 's@Test @@g' -e 's@:.*@@g'`

for test in $tests_to_replace; do
  @CMAKE_MAKE_PROGRAM@ ${test}ReplaceResults/fast
done
